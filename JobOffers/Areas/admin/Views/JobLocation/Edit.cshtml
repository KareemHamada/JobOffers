@model JobLocation

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>General Form</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">General Form</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
              <div class="col-md-8">
                <!-- general form elements -->
                     <div class="card card-primary">
                  <div class="card-header">
                     <h3 class="card-title">Job Location</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                        <form asp-area="admin" asp-controller="JobLocation" asp-action="Save" method="post" role="form">
                    <div class="card-body">
                                <input type="hidden" asp-for="JobLocationId" />
                                <input type="hidden" asp-for="CurrentState" />
                      <div class="form-group">
                        <label for="exampleInputEmail1">Location Name</label>
                                    <input asp-for="JobLocationName" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter Location Name">
                                    <span asp-validation-for="JobLocationName" class="text-danger"></span>
                      </div>
                      
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </form>
                </div>
                <!-- /.card -->  
              </div>
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
 


@section Scripts{
    <!-- bs-custom-file-input -->
    <script src="~/Admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Admin/dist/js/adminlte.min.js"></script>

    <script>
    $(function () {
      bsCustomFileInput.init();
    });
    </script>
}

